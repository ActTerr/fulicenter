<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
   <android.support.v7.widget.AppCompatCheckBox
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/iv_cart_check"
       android:paddingLeft="10dp"
       android:layout_centerVertical="true"/>
    <ImageView
        android:id="@+id/iv_cart_pic"
        android:paddingLeft="10dp"
        android:layout_toRightOf="@+id/iv_cart_check"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/nopic"/>
    <LinearLayout
        android:paddingLeft="15dp"
        android:layout_toRightOf="@+id/iv_cart_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_cart_name"
            android:text="aaaaaaaaa"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_cart_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/add_cart"/>
            <TextView
                android:text="(1)"
                android:layout_toRightOf="@+id/iv_cart_add"
                android:id="@+id/tv_cart_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_toRightOf="@+id/tv_cart_amount"
                android:id="@+id/iv_cart_reduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/del_cart"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:id="@+id/tv_cart_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="20sp"/>
</RelativeLayout>